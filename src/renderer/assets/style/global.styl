*, *::before, *::after
  box-sizing: border-box

img
  max-width: 100%

html, body
  margin: 0
  padding: 0
  width: 100%
  height: 100vh
  overflow: hidden

body
  font-family: 'Microsoft YaHei', 'Microsoft Jhenghei', 'PingFang SC', -apple-system, BlinkMacSystemFont, Roboto, 'Helvetica Neue', Helvetica, Arial, 'Hiragino Sans GB', 'Source Han Sans', 'Noto Sans CJK Sc', sans-serif

p, h1, h2, h3, h4, h5, h6
  margin: 0

input
  background-color: transparent
  border: none
  outline: none

ul
  padding: 0
  margin: 0
  list-style: none

a
  text-decoration: none
  color: inherit

.top-bg
  transition: background-color 0.25s
  background-color: rgba(255, 255, 255, 0.058)

  &:hover
    background-color: rgba(255, 255, 255, 0.1)

.top-bg-noHover
  background-color: rgba(255, 255, 255, 0.058)

.module-title
  margin: 10px 0 6px
  font-size: 18px

.scrollbar
  &::-webkit-scrollbar
    width: 6px

  &::-webkit-scrollbar-thumb
    border-radius: 8px
    background: rgba(193, 193, 193, 0.25)

.radius_100
  border-radius: 100%

.primary-btn
  padding: 2px 10px
  background-color: #eb3f53
  border-radius: 10px
  font-size: 14px
  cursor: pointer
  transition: all 0.25s

  &:hover
    background-color: #da142b