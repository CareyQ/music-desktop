*, *::before, *::after
  box-sizing: border-box

img
  display: block
  max-width: 100%

html, body
  margin: 0
  padding: 0
  width: 100%
  height: 100vh
  overflow: hidden

body
  -webkit-font-smoothing: antialiased
  background-color: var(--color-body-bg)
  color: var(--color-text)
  font-size: 16px

body, input, input::-webkit-input-placeholder
  font-family: Poppins, 'Noto Sans SC', 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑', Arial, sans-serif

p, h1, h2, h3, h4, h5, h6
  font-size: inherit
  margin: 0

input
  background-color: transparent
  border: none
  outline: none

ul
  padding: 0
  margin: 0
  list-style: none

a
  text-decoration: none
  color: inherit

#app
  height: 100%
  width: 100%

.drag
  -webkit-app-region: drag

.no-drag
  -webkit-app-region: no-drag

.flex
  display: flex

.items-center
  align-items: center

.justify-center
  justify-content: center

.flex-col
  flex-direction: column

.justify-between
  justify-content: space-between

.justify-end
  justify-content: flex-end

.flex-nowrap
  flex-wrap: wrap

.module
  margin-bottom: 20px
  padding: 10px 20px 20px
  width: 100%
  border-radius: 8px
  border: var(--border)

.module-title
  display: flex
  justify-content: space-between
  align-items: flex-end
  flex-wrap: margin-bottom
  margin-bottom: 10px

  span
    font-weight: 700
    font-size: 14px
    color: var(--color-text-sub)
    cursor: pointer

.module-body
  display: flex
  flex-wrap: wrap
  gap: 20px
