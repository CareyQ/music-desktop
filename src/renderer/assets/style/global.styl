img
  display: block
  max-width: 100%

html, body
  margin: 0
  padding: 0
  width: 100%
  height: 100vh
  overflow: hidden

body
  -webkit-font-smoothing: antialiased
  font-family: Montserrat, 'Noto Sans SC', 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑', Arial, sans-serif
  background-color: var(--color-body-bg)
  color: var(--color-text)
  font-size: 16px

p, h1, h2, h3, h4, h5, h6
  font-size: inherit
  margin: 0

input
  background-color: transparent
  border: none
  outline: none

ul
  padding: 0
  margin: 0
  list-style: none

a
  text-decoration: none
  color: inherit

#app
  height: 100%
  width: 100%

.drag
  -webkit-app-region: drag

.no-drag
  -webkit-app-region: no-drag

.flex
  display: flex

.items-center
  align-items: center

.justify-center
  justify-content: center